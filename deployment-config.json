{
  "kind": "Deployment",
  "apiVersion": "apps/v1",
  "metadata": {
    "labels": {
      "app": "spring-boot-starter-tts",
      "app.openshift.io/runtime": "spring-boot"
    },
    "name": "spring-boot-starter-tts"
  },
  "spec": {
    "replicas": 1,
    "revisionHistoryLimit": 5,
    "selector": {
      "matchLabels": {
        "app": "spring-boot-starter-tts"
      }
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "spring-boot-starter-tts",
          "deployment": "spring-boot-starter-tts"
        }
      },
      "spec": {
        "containers": [
          {
            "image": "image-registry.openshift-image-registry.svc:5000/IMAGE_TAG_PLACEHOLDER",
            "name": "spring-boot-starter-tts",
            "ports": [
              {
                "containerPort": 8080,
                "protocol": "TCP"
              }
            ],
            "resources": {
              "limits": {
                "cpu": "150m",
                "memory": "256Mi"
              },
              "requests": {
                "cpu": "100m",
                "memory": "192Mi"
              }
            },
            "volumeMounts": [
              {
                "mountPath": "/keystore",
                "name": "keystore",
                "readOnly": true
              }
            ],
            "livenessProbe": {
              "failureThreshold": 3,
              "httpGet": {
                "path": "/actuator/health",
                "port": 8080,
                "scheme": "HTTP"
              },
              "initialDelaySeconds": 30,
              "periodSeconds": 30,
              "successThreshold": 1,
              "timeoutSeconds": 5
            },
            "readinessProbe": {
              "failureThreshold": 3,
              "httpGet": {
                "path": "/actuator/health",
                "port": 8080,
                "scheme": "HTTP"
              },
              "initialDelaySeconds": 180,
              "periodSeconds": 30,
              "successThreshold": 1,
              "timeoutSeconds": 5
            },
            "startupProbe": {
              "failureThreshold": 10,
              "httpGet": {
                "path": "/actuator/health",
                "port": 8080,
                "scheme": "HTTP"
              },
              "initialDelaySeconds": 120,
              "periodSeconds": 15,
              "successThreshold": 1,
              "timeoutSeconds": 5
            }
          }
        ],
        "restartPolicy": "Always",
        "volumes": [
          {
            "name": "keystore",
            "secret": {
              "defaultMode": 420,
              "secretName": "keystore"
            }
          }
        ]
      }
    }
  }
}
