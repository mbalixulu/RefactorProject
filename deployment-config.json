{
  "apiVersion": "apps.openshift.io/v1",
  "kind": "DeploymentConfig",
  "metadata": {
    "labels": {
      "app": "spring-boot-starter-tts"
    },
    "name": "spring-boot-starter-tts"
  },
  "spec": {
    "replicas": 1,
    "revisionHistoryLimit": 5,
    "selector": {
      "app": "spring-boot-starter-tts",
      "deploymentconfig": "spring-boot-starter-tts"
    },
    "strategy": {
      "type": "Rolling"
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "spring-boot-starter-tts",
          "deploymentconfig": "spring-boot-starter-tts"
        }
      },
      "spec": {
        "containers": [
          {
            "image": "quay.io/sdase/openjdk-runtime:17-hotspot",
            "name": "spring-boot-starter-tts",
            "ports": [
              {
                "containerPort": 8080,
                "protocol": "TCP"
              }
            ],
            "resources": {
              "limits": {
                "cpu": "150m",
                "memory": "256Mi"
              },
              "requests": {
                "cpu": "100m",
                "memory": "192Mi"
              }
            },
            "volumeMounts": [
              {
                "mountPath": "/keystore",
                "name": "keystore",
                "readOnly": true
              }
            ],
            "livenessProbe": {
              "failureThreshold": 3,
              "httpGet": {
                "path": "/actuator/health",
                "port": 8080,
                "scheme": "HTTP"
              },
              "initialDelaySeconds": 30,
              "periodSeconds": 30,
              "successThreshold": 1,
              "timeoutSeconds": 5
            },
            "readinessProbe": {
              "failureThreshold": 3,
              "httpGet": {
                "path": "/actuator/health",
                "port": 8080,
                "scheme": "HTTP"
              },
              "initialDelaySeconds": 180,
              "periodSeconds": 30,
              "successThreshold": 1,
              "timeoutSeconds": 5
            },
            "startupProbe": {
              "failureThreshold": 10,
              "httpGet": {
                "path": "/actuator/health",
                "port": 8080,
                "scheme": "HTTP"
              },
              "initialDelaySeconds": 120,
              "periodSeconds": 15,
              "successThreshold": 1,
              "timeoutSeconds": 5
            }
          }
        ],
        "restartPolicy": "Always",
        "volumes": [
          {
            "name": "keystore",
            "secret": {
              "defaultMode": 420,
              "secretName": "keystore"
            }
          }
        ]
      }
    },
    "triggers": [
      {
        "imageChangeParams": {
          "automatic": true,
          "containerNames": [
            "spring-boot-starter-tts"
          ],
          "from": {
            "kind": "ImageStreamTag",
            "name": "spring-boot-starter-tts:latest"
          }
        },
        "type": "ImageChange"
      },
      {
        "type": "ConfigChange"
      }
    ]
  }
}
